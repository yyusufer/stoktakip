<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Takip</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            background-color: #f4f6f9;
            color: #333;
            font-family: 'Segoe UI', sans-serif;
        }

        header {
            background-color: #343a40;
            color: white;
            padding: 1rem;
        }

        .nav-link {
            color: #e2e6ea !important;
        }

        .nav-link:hover {
            color: #ffffff !important;
        }

        footer {
            background-color: #343a40;
            color: #bbb;
            text-align: center;
            padding: 1rem;
            margin-top: 2rem;
        }

        .container {
            margin-top: 2rem;
        }
    </style>
</head>
<body>
    <header>
        <div class="container d-flex justify-content-between align-items-center">
            <h3>Takip Uygulaması</h3>
            <nav>
                <a class="nav-link d-inline px-3" href="/">Anasayfa</a>
                <a class="nav-link d-inline px-3" href="/Product">Ürünler</a>
                <a class="nav-link d-inline px-3" href="/Database/Index">Veritabanı</a>
                <a class="nav-link d-inline px-3" href="/Sale/Index">Satış</a>
                
            </nav>
        </div>
    </header>




    <main class="container">
        @RenderBody()
    </main>

    <footer>
        &copy; @DateTime.Now.Year Takip Uygulaması - Tüm hakları saklıdır.
    </footer>
@RenderSection("Scripts", required: false)

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
